doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Newwwness
    link(rel='icon', href='favicon.png')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:500,100italic')
    link(rel='stylesheet', href='css/main.css')
  body
    main
      .Articles
        - var jcrew = {title: 'Drunk J Crew', image: 'img/jcrew.jpg', link:'http://drunkjcrew.tumblr.com'}
        each article in [jcrew, jcrew, jcrew, jcrew]
          .Article
            .Article-image(style="background-image: url(#{article.image})")
            .Article-title= article.title
            a.Article-link(href=article.link target="_blank")= article.link.split('//')[1]
    footer
      .Logo
